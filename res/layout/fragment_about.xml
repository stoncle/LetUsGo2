<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_editprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:paddingLeft="15.0dip" >

                    <ImageView
                        android:id="@+id/dialog_avatar_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/about_400" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="40dip"
                    android:background="@color/white_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    >

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="54.0dip"
                        android:text="APP"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.0dip"
                        android:layout_toRightOf="@id/textview1"
                        android:background="@null"
                        android:maxLength="10"
                        android:text="Let‘s Go！"
                        android:textColor="#ffffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="17.0sp" >

                        <requestFocus />
                    </TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/white_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip" >

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="54.0dip"
                        android:text="版本"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.0dip"
                        android:layout_toRightOf="@id/textview2"
                        android:background="@null"
                        android:maxLength="20"
                        android:text="1.0beta"
                        android:textColor="#ffffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="17.0sp" >

                        <requestFocus />
                    </TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/white_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip" >

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="54.0dip"
                        android:background="@null"
                        android:text="团队"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.0dip"
                        android:layout_toRightOf="@id/textview3"
                        android:background="@null"
                        android:maxLength="20"
                        android:text="华中科技大学Go团队"
                        android:textColor="#ffffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="17.0sp" >

                        <requestFocus />
                    </TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/white_line" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
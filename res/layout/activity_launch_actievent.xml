<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <include layout="@layout/launch_actievent_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/white_line" />

            <include layout="@layout/my_location_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/white_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:text="名称"
                    android:textColor="#ffffffff"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text3Size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/edittext_actievent_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dip"
                        android:gravity="top|left"
                        android:hint="活动主题（&lt;20字）"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text3Size" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/white_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center"
                    android:text="描述"
                    android:textColor="#ffffffff"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text3Size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:orientation="horizontal" >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/edittext_actievent_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|top"
                            android:hint="添加描述"
                            android:inputType="textMultiLine"
                            android:minLines="4"
                            android:minHeight="160dip"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/text3Size" />
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/white_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="#ffffffff"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text3Size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/edittext_launch_actievent_starttime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="开始时间"
                        android:paddingLeft="1.0dip"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text3Size" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:src="@drawable/arrow" />

                    <EditText
                        android:id="@+id/edittext_launch_actievent_endtime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal"
                        android:hint="结束时间"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text3Size" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/white_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip" >

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="人数"
                    android:textColor="#ffffffff"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text3Size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/edittext_launch_actievent_min_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="最少人数"
                        android:paddingLeft="1.0dip"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text3Size" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:src="@drawable/arrow" />

                    <EditText
                        android:id="@+id/edittext_launch_actievent_max_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal"
                        android:hint="最多人数"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text3Size" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@color/white_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>